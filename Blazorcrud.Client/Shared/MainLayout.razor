@inherits LayoutComponentBase

@inject IUserService UserService
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>
    <main>

        <div class="top-row px-8" style="font-size:30px; color:black;">
            <div class="nav-item px-3 ml-auto">
                @if (LoggedIn)
                {
                        <NavLink href="/user/logout" class="nav-item nav-link"><i class="bi bi-box-arrow-in-left fs-2"></i> Logout</NavLink>
                
                }
                else
                {
                        <NavLink href="/user/login" class="nav-item nav-link"><i class="bi bi-box-arrow-in-right fs-2"></i> Login</NavLink>
                }

            </div>
            @if (LoggedIn)
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="#">
                        <span class="bi bi-person fs-2" ></span> @UserService.User.Username
                    </NavLink>
                
                </div>
            }
            
            <a class="nav-link" href="#" data-toggle="dropdown"><img src="/imagem/user.jpg" style="width:40px; border-radius:50%;" /><span class="xp-user-live"></span></a>
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">Sobre</a>
            
        </div>

        <article class="content px-4">
            <Alert />
            @Body
        </article>
    </main>
</div>

@code{
    public bool LoggedIn
    {
        get { return UserService.User != null; }
    }
}

